# Use an ARM-compatible Python base image
FROM arm32v7/python:3.8-slim

ENV DEBIAN_FRONTEND=noninteractive

# Install runtime and build dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        python3-dev \
        python3-paho-mqtt \
        python3-yaml \
        python3-smbus \
        i2c-tools \
        python3-pip \
        libjpeg-dev \
        zlib1g-dev \
        libtiff5-dev \
        libfreetype6-dev \
        libopenjp2-7-dev \
        libatlas-base-dev \
        gfortran \
    && rm -rf /var/lib/apt/lists/*

# Install the Sense HAT Python library via pip
RUN pip3 install --no-cache-dir sense-hat

# Set working directory
WORKDIR /app

# Copy configuration and source code
COPY myconfig.yaml ./
COPY src/ ./src/

# Launch the publisher script
CMD ["python3", "src/publisher.py"]