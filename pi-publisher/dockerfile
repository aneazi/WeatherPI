FROM arm32v7/python:3.8-slim

ENV DEBIAN_FRONTEND=noninteractive

# Install runtime dependencies via apt
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        python3-paho-mqtt \
        python3-yaml \
        sense-hat \
        i2c-tools \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy config and source code
COPY myconfig.yaml ./
COPY src/ ./src/

# Launch the publisher script
CMD ["python3", "src/publisher.py"]